@model Market.Views.ViewModel.Default.DefaultViewModel
@using Market.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="info-section">
    <div class="info-middle">
        <p>Shop Your Favorite Tea</p>
    </div>
</section>

<section id="watch">
    <div class="container">
        <div class="look mt-5">
            <div class="row">
                <div class="col-md-8">
                    <img src="@Model.ProductDetail.Image ">
                </div>
                <div class="col-md-4 mt-5">
                    <h1 style="font-family: 'Courier New', Courier, monospace;">@Model.ProductDetail.Name</h1>
                    <p style="font-size: 20px;font-family: 'Courier New', Courier, monospace;">@Model.ProductDetail.Price AZN</p>

                    <p style="font-size: 20px;font-family: 'Courier New', Courier, monospace;">Olcu</p>
                    <select style="    padding: 10px;width: 250px;font-family: 'Courier New', Courier, monospace;">
                        <option value="volvo">125Gr</option>
                        <option value="saab">250Gr</option>
                        <option value="opel">500Gr</option>

                    </select>
                    <p class="mt-3" style="font-size: 20px;font-family: 'Courier New', Courier, monospace;">Miqdar</p>
                    <div class="from">
                        <input class="num" type="number" id="price_from" min="1" max="5000" value="" placeholder="1">
                    </div>

                    <div class="cell mt-3"><button class="cart" data-hook="add-to-cart" type="submit">Add to Cart</button></div>
                </div>
            </div>
        </div>
    </div>
</section>


